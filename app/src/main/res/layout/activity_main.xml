<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFDB00"
        />
    <TextView
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvoperator"
        app:layout_constraintRight_toLeftOf="@id/tvoperator"
        android:layout_marginEnd="20dp"
        android:textSize="30sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvoperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvoperator"
        app:layout_constraintTop_toTopOf="@id/tvoperator"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textColor="#000000" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        app:layout_constraintLeft_toLeftOf="@id/btn2"
        app:layout_constraintRight_toRightOf="@id/btn2"
        android:text="5"
        android:textColor="#000000"
        android:textSize="30sp"
        android:onClick="variantClick"
        android:background="@drawable/knopka"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toStartOf="@id/btn4"
        android:text="@string/_1234"
        android:textColor="#000000"
        android:textSize="30sp"
        android:onClick="variantClick"
        android:background="@drawable/knopka" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintRight_toRightOf="@id/btn4"
        app:layout_constraintLeft_toLeftOf="@id/btn4"
        android:text="32"
        android:textColor="#000000"
        android:textSize="30sp"
        android:onClick="variantClick"
        android:background="@drawable/knopka"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintBottom_toBottomOf="@id/btn2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:text="78"
        android:textColor="#000000"
        android:textSize="30sp"
        android:onClick="variantClick"
        android:background="@drawable/knopka"
        android:layout_marginStart="15dp" />


</androidx.constraintlayout.widget.ConstraintLayout>